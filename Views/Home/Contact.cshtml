    <!-- Welkom Campus -->
    <div class="column">
        <h1><a href="https://www.cut.ac.za/campus/2/welkom-campus">Welkom Campus</a></h1>
        <a href="madiradingwe@cut.ac.za">Welkom Admin Email</a>
        <img src="~/images/welkom.jpg" alt="Welkom Campus Image"/>
        <div class="Content">
            <p>
